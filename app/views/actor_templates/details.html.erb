<h1> Actor number #<%= @the_actor.id %> details </h1>

<a href="/actors"> Go back </a>

<hr>
  <dt>Name</dt>
    <dd> <%= @the_actor.name %> </dd>

  <dt>Dob</dt>
   <dd> <%= @the_actor.dob %> </dd>
  
  <dt>Bio</dt>
   <dd> <%= @the_actor.bio %> </dd>

 <dt> Image </dt>
    <dd> <img src = "<%= @the_actor.image %>" width = "100" > </dd>
  
  <dt>Created at</dt>
  <dd> <%= @the_actor.created_at %> </dd>

  <dt>Updated at</dt>
    <dd> <%= @the_actor.updated_at %> </dd>

<hr>


<h1> Filmography </h1>

<% matching_character =  Character.where({ :actor_id => @the_actor.id})%>

<table border="1">
  <tr>
    <th> Title </th>
    <th> Year </th>
    <th> Director </th>
    <th> Character name </th>
    <th>  </th>
  </tr>

<% matching_character.each do |a_character| %>
<tr>
    
    <td> 
    <% matching_movie =  Movie.where({ :id => a_character.movie_id }) %>
    <% the_movie = matching_movie.at(0) %> 
    <%= the_movie.title %> 
      </td>
      
    <td> <%= the_movie.year %> </td>

    <td> 
    <% matching_director =  Director.where({ :id => the_movie.director_id }) %>
    <% the_director = matching_director.at(0) %> 
    <%= the_director.name %> 
   
    <td> <%= a_character.name %> </td>
   
    <td> 
      <a href="/movies/<%= the_movie.id %>"> Show details
      </td>


   <% end %>
